<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.freelink.library.widget.ImageTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="未连接，请点击连接"
        android:textColor="#666"
        android:textSize="14sp"
        app:drawableLeft="@mipmap/bluetooth_gray"
        app:drawableSize="20dp" />

    <!--<style name="AppointmentTimeStyle">-->
    <!--<item name="android:layout_width">90dp</item>-->
    <!--<item name="android:layout_height">25dp</item>-->
    <!--<item name="android:gravity">center</item>-->
    <!--<item name="android:clickable">true</item>-->
    <!--<item name="android:textColor">@color/zw_text_333_white_selector</item>-->
    <!--<item name="android:background">@drawable/zw_bg_calendar_selector</item>-->
    <!--</style>-->

    <LinearLayout
        android:id="@+id/ll_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/tv_font_s"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/bg_font_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="宋体"
            android:textColor="@color/color_333_white_selector_selector" />

        <TextView
            android:id="@+id/tv_font_h"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="@drawable/bg_font_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="黑体"
            android:textColor="@color/color_333_white_selector_selector" />

        <TextView
            android:id="@+id/tv_font_f"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="@drawable/bg_font_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="仿宋"
            android:textColor="@color/color_333_white_selector_selector" />

        <TextView
            android:id="@+id/tv_font_k"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="@drawable/bg_font_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="楷体"
            android:textColor="@color/color_333_white_selector_selector" />
    </LinearLayout>

</LinearLayout>
